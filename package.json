{
  "name": "facecamp",
  "description": "Facecamp connects to Slack to let you take animated gifs and post them for your teamies to see.",
  "version": "0.0.1",
  "browserslist": [
    "chrome 63",
    "edge 15",
    "firefox 58",
    "ios 11.2",
    "safari 11",
    "opera 50"
  ],
  "dependencies": {
    "abortcontroller-polyfill": "^1.2.1",
    "accessible-autocomplete": "github:lukekarrys/accessible-autocomplete#229/confirm-on-blur-undefined",
    "classnames": "^2.2.6",
    "gif.js": "^0.2.0",
    "preact": "^8.4.2",
    "preact-router": "^2.6.1",
    "pretty-bytes": "^5.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "gzip-size-cli": "^3.0.0",
    "husky": "^1.3.1",
    "if-env": "^1.0.4",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "preact-cli": "^3.0.0-next.14",
    "prettier": "^1.15.3",
    "serve": "^6.5.8"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "rules": {
      "jsx-a11y/media-has-caption": 0,
      "jsx-a11y/no-onchange": 0,
      "react/no-deprecated": 0
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "homepage": "https://face.camp/",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "main": "scripts/config.js",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "private": true,
  "scripts": {
    "build": "preact build --no-prerender --inline-css false --config scripts/config.js && cp now.json build/now.json",
    "build:size": "find build -type f -name '*.js' -exec printf '%s - ' {} \\; -exec gzip-size --raw {} \\; | sort",
    "build:sizes": "node scripts/build-sizes",
    "dev": "preact watch --https --config scripts/config.js --port 8080",
    "eslint": "eslint --fix .",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write '**/*.{js,md,css,json}'",
    "serve": "serve build --port 8080 --clipless --treeless --single --ssl",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev"
  }
}
