{
  "name": "facecamp",
  "description": "Facecamp: chat your mug! Take animated gifs of your face and share with your fave Slack channel. Made by your friends at &yet.",
  "version": "0.0.1",
  "author": "&yet",
  "browserslist": [
    "chrome 66",
    "edge 16",
    "firefox 58",
    "ios 11.3",
    "safari 12.1",
    "opera 53"
  ],
  "dependencies": {
    "accessible-autocomplete": "github:lukekarrys/accessible-autocomplete#229/confirm-on-blur-undefined",
    "classnames": "^2.2.6",
    "dlv": "^1.1.2",
    "gif.js": "^0.2.0",
    "preact": "^8.4.2",
    "preact-router": "^2.6.1",
    "pretty-bytes": "^5.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "gzip-size-cli": "^3.0.0",
    "husky": "^2.2.0",
    "if-env": "^1.0.4",
    "lint-staged": "^8.1.6",
    "lodash": "^4.17.11",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.6.0",
    "preact-cli": "^3.0.0-rc.1",
    "preact-render-to-string": "^4.1.0",
    "prettier": "^1.17.0",
    "serve": "^6.5.8"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "pragma": "h",
        "version": "999.999.999"
      }
    },
    "rules": {
      "jsx-a11y/media-has-caption": 0,
      "jsx-a11y/no-onchange": 0,
      "react/no-deprecated": 0
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "homepage": "https://face.camp/",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{json,css,md,html}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "main": "scripts/config.js",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "private": true,
  "scripts": {
    "build": "preact build --no-prerender --inline-css false --esm false --config scripts/config.js && cp now.json build/now.json",
    "build:size": "find build -type f -name '*.js' -exec printf '%s - ' {} \\; -exec gzip-size --raw {} \\; | sort",
    "build:sizes": "node scripts/build-sizes",
    "eslint": "eslint --fix .",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write '**/*.{js,md,css,json}'",
    "serve": "serve build --port 8080 --clipless --treeless --single --ssl",
    "start": "preact watch --https --esm false --config scripts/config.js --port 8080",
    "test": "npm run build > /dev/null"
  }
}
