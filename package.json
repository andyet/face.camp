{
  "name": "facecamp",
  "description": "Facecamp connects to Slack to let you take animated gifs and post them in any channel for your teamies to see.",
  "version": "0.0.0",
  "dependencies": {
    "classnames": "^2.2.5",
    "gif.js": "^0.2.0",
    "preact": "^8.2.6",
    "preact-router": "^2.6.0",
    "pretty-bytes": "^4.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^3.0.0-next.66cc7a90",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "if-env": "^1.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-variables-loader": "^5.0.1",
    "preact-cli": "^2.1.0",
    "prettier": "^1.12.1",
    "uglifyjs-webpack-plugin": "^1.2.5"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "homepage": "https://face.camp/",
  "license": "MIT",
  "main": "scripts/preact.config.js",
  "private": true,
  "scripts": {
    "build": "preact build --no-prerender --config scripts/config.js",
    "build:size": "find build -type f -name '*.js' -exec printf '%s - ' {} \\; -exec gzip-size --raw {} \\; | sort",
    "build:sizes": "node scripts/build-sizes",
    "dev": "preact watch --https --config scripts/config.js",
    "eslint": "eslint --fix .",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write \"src/**/*.{js,css}\" \"*.js\"",
    "serve": "npm run build && preact serve -p 8081",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev"
  }
}
