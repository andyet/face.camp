{
  "name": "facecamp",
  "description": "Facecamp connects to Slack to let you take animated gifs and post them for your teamies to see.",
  "version": "0.0.1",
  "dependencies": {
    "abortcontroller-polyfill": "^1.1.9",
    "accessible-autocomplete": "github:lukekarrys/accessible-autocomplete#229/confirm-on-blur-undefined",
    "classnames": "^2.2.5",
    "gif.js": "^0.2.0",
    "preact": "^8.2.9",
    "preact-router": "^2.6.0",
    "pretty-bytes": "^5.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^3.0.0-next.66cc7a90",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.8.2",
    "gzip-size-cli": "^2.1.0",
    "husky": "^1.0.0-rc.6",
    "if-env": "^1.0.4",
    "lint-staged": "^7.1.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "preact-cli": "^2.2.1",
    "prettier": "^1.12.1",
    "uglifyjs-webpack-plugin": "^1.2.5"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "rules": {
      "jsx-a11y/media-has-caption": 0,
      "jsx-a11y/no-onchange": 0,
      "react/no-deprecated": 0
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "homepage": "https://face.camp/",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "main": "scripts/config.js",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "private": true,
  "scripts": {
    "build": "preact build --no-prerender --config scripts/config.js",
    "build:size": "find build -type f -name '*.js' -exec printf '%s - ' {} \\; -exec gzip-size --raw {} \\; | sort",
    "build:sizes": "node scripts/build-sizes",
    "dev": "preact watch --https --config scripts/config.js",
    "eslint": "eslint --fix .",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write '**/*.{js,md,css,json}'",
    "serve": "npm run build && preact serve -p 8081",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev"
  }
}
