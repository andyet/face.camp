{
  "name": "facecamp",
  "description": "Send animated gifs from the browser to Slack.",
  "version": "0.0.0",
  "dependencies": {
    "classnames": "^2.2.5",
    "gif.js": "^0.2.0",
    "preact": "^8.2.6",
    "preact-router": "^2.6.0",
    "pretty-bytes": "^4.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-synacor": "^2.0.2",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.1.0",
    "prettier": "^1.11.1",
    "uglifyjs-webpack-plugin": "^1.2.5"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "license": "MIT",
  "main": "preact.config.js",
  "private": true,
  "scripts": {
    "build": "USE_ES6=false preact build --no-prerender --config scripts/config.js",
    "build:size": "find build -type f -name '*.js' -exec printf '%s - ' {} \\; -exec gzip-size --raw {} \\; | sort",
    "build:sizes": "node scripts/build-sizes",
    "dev": "preact watch --https --config scripts/config.js",
    "eslint": "eslint --fix .",
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier --write \"src/**/*.{js,css}\" \"*.js\"",
    "serve": "npm run build && preact serve",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev"
  }
}
